@using FoodStore.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 align="center" style="text-transform : uppercase">Danh sách sản phẩm</h4>
@foreach (var p in Model)
{
    <!-- product -->
    <div class="col-sm-4 col-md-4 col-lg-4 col-xs-6">

        <div class="product">
            <a href="~/Products/ChiTietSanPham/@p.ProductId">
                <div class="productImg">
                    <img src="~/Content/Images/@p.Image" alt="" class="img-product">

                </div>
                <div class="product-body">
                    <h3 class="product-name"><a href="~/Products/ChiTietSanPham/@p.ProductId">@p.ProductName</a></h3>
                    <h4 class="product-price">@String.Format("{0:0,00}", @p.Price)đ@*<del class="product-old-price">@p.Price</del>*@</h4>


                </div>
            </a>


            @*<div class="add-to-cart">
            <button class="add-to-cart-btn" data-id="@p.ProductId" id="@($"btn{p.ProductId}")">
                <i class="fa fa-shopping-cart"></i>
                <a href="@Url.Action("ThemGioHang","GioHang",new { idproduct = p.ProductId })">
                    <p class="@($"text{p.ProductId}") ">Thêm vào giỏ hàng</p>
                </a>
            </button>
        </div>*@

            <div class="add-to-cart">
                <button class="add-to-cart-btn" data-id="@p.ProductId" id="@($"btn{p.ProductId}")">

                    <span class="@($"text{p.ProductId}")" href="@Url.Action("ThemGioHang","GioHang",new { idproduct = p.ProductId })">
                        <i class="fa fa-shopping-cart"></i>
                    </span>
                </button>
            </div>
        </div>
    </div>
}
@*Tạo liên kết các trang*@

<div class="list">
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", "Products", new { page = page }))
    </div>
</div>
<style>
    .MenuTrang {
        margin-top: 500px;
        display: inline;
        text-align: center;
        width: 100%;
    }

    .product-body {
        border-radius: 0 0 1.5rem 1.5rem;
    }

    .product {
        border-radius: 1.5rem;
        box-shadow: rgba(0, 0, 0, 0.15) 0px 5px 15px 0px;
    }

    .add-to-cart {
        border-radius: 0 0 1.5rem 1.5rem;
    }



    .product-details .add-to-cart .add-to-cart-btn:hover {
        background-color: #FFF;
        color: red;
        border-color: #D10024;
        padding: 0px 30px 0px 50px;
    }

   

    .productImg {
        height: 300px;
        object-fit: cover;
        border-radius: 1.5rem;
    }

    .img-product {
        border-radius: 1.5rem 1.5rem 0 0;
        max-height: 100%;
        width : 100%;
    }



    .pagination {
        width: 100%;
        z-index: 1;
        display: flex;
        justify-content: center;
    }

        .pagination .active > a {
            background: #f7bf55;
            border-color: #f7bf55;
        }

        .pagination li, .pagination a {
            margin: 0;
            padding: 0;
            z-index: 0;
            margin-top: 15px;
            font-size: 15px;
            font-weight: bold;
        }

    .main-nav > li > a {
        padding: 20px 20px;
        font-weight: 600;
    }

    .dtb {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 300px;
    }

    #hot-deal.section {
        background: #fff;
    }
</style>

@section GioHang{


    <script src="~/Scripts/Cart.js"></script>
}