@model FoodStore.Models.Order

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Chi tiết đơn đặt hàng</h4>

<div>

    <hr />

    <dl class="dl-horizontal">

        <dt>
            Tên khách
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.CustomerName)
        </dd>
        <dt>
            Ngày đặt
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderDate)
        </dd>

        <dt>
            Ngày giao
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DeliveryDate)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Address)
        </dd>



        <dt>
            Số điện thoại
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RecipientPhone)
        </dd>



        <dt>
            Giá
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrderPrice)
        </dd>



    </dl>
</div>
<p>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">


            @Html.ActionLink("Về trang chủ", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        </div>

    </div>
</p>
