@model IEnumerable<FoodStore.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h5 class="text-center text-3xl font-weight-bolder p-3" style="background-color : beige">Quản Lý Danh Mục </h5>


<p>
    @Html.ActionLink("Thêm danh mục mới", "Create", null, new { @class = "btn btn-succses" })
</p>
<table class="table">
    <tr style="box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px; padding: 10px; border-radius: 5px ">
        <th>
            Danh mục
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>

            <td>
                <a href="/Admin/Categories/Edit/@item.CategoryId"><i class="fa-solid fa-pen-to-square b"></i></a>
                <a href="/Admin/Categories/Details/@item.CategoryId"><i class="fa-solid fa-circle-info g"></i></a>
                <a href="/Admin/Categories/Delete/@item.CategoryId" id="Delete"><i class="fa-solid fa-trash r"></i></a>
            </td>
        </tr>
    }

</table>
<script src="~/Scripts/Delete.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/5.5.3/bootbox.min.js" integrity="sha512-U3Q2T60uOxOgtAmm9VEtC3SKGt9ucRbvZ+U3ac/wtvNC+K21Id2dNHzRUC7Z4Rs6dzqgXKr+pCRxx5CyOsnUzg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>